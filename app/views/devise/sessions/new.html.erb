<div class="container">
  <div class="card card-container" style="
  margin-left: 300px;">
    <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) ,:defaults => { :input_html => { :class => "form-control" } }) do |f| %>

    <span id="reauth-email" class="reauth-email"></span>
          <%= f.input :email, required: false, autofocus: true ,:input_html => { class: 'form-control'},label: false, placeholder: 'Email address' %>
          <%= f.input :password, required: false , :input_html => { class: 'form-control'} , label: false, placeholder: "Password" %>

          <%= f.input :remember_me, :input_html => { class: 'checkbox'},inline_label: 'Yes, remember me' , label: false,as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, "Log in" , class: "btn btn-lg btn-primary btn-block btn-signin" %>
      <% end %>
    <a href="#" class="forgot-password">
      <%= render "devise/shared/links" %>
    </a>
  </div><!-- /card-container -->
</div><!-- /container -->

